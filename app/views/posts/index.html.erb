<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">Listing posts</h1>
  </div>
  <div class="col-md-2">
    <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-hover">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th></th>
      </tr>

      <% @posts.each do |post| %>
        <tr>
        <td><%= post.title %></td>
        <td><%= post.author %></td>
        <td><%= link_to 'Show', post,  class:"btn btn-info"%>
        &nbsp;
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %>
          &nbsp;
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>

<br />

