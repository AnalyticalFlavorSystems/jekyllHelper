<div class="row">
  <div class="col-md-8 col-md-offset-2" style="background-color:#eeeeee;border-radius:5px;margin-top:50px;">
    <h1 class="text-center"><%= @post.title %></h1>
    <hr>
    <p class="text-align:justify;">
    <%= displayPosts(@post.content, 'post' => @post) %>
    </p>
  </div>
</div>

<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info btn-block" %> 
    <h3 class="text-center">Send everything in the box below to Evan</h3>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div style="background-color:#eeeeee;border-radius:5px;margin:50px 0;padding:25px;">
    <%=raw(@post.markdown) %>
  </div>
  </div>
</div>
